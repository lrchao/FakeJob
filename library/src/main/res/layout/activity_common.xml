<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:lrchaoBar="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.lrchao.views.toolbar.LrchaoToolBar
        android:id="@id/toolbar_lrchao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lrchaoBar:background_color="@color/colorPrimary"
        lrchaoBar:center_title_color="@color/white"
        lrchaoBar:center_title_size="@dimen/toolbar_title"
        />


    <LinearLayout
        android:id="@id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"/>

</LinearLayout>
